<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informações</h4>
        <form action="/admin/perfil/edit"  class="forms-sample" method="POST">
            <input type="text" hidden name="idUtilizadores" value="<%= users[0].idUtilizadores %>">
            <div class="form-group">
                <label>Primeiro Nome</label>
                <input type="text" class="form-control" value="<%= users[0].primeiroNome %>" name="primeiroNome">
            </div>
            <div class="form-group">
                <label>Ultimo Nome</label>
                <input type="text" class="form-control" value="<%= users[0].ultimoNome %>" name="ultimoNome">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" value="<%= users[0].email %>" name="email">
            </div>
            <div class="form-group">
                <label>Gênero</label>
                <select class="form-control" name="genero">
                  <option value="<%= users[0].genero %>"><%if(users[0].genero == 'mas'){%>  <%= 'Masculino' %>  <%}if(users[0].genero == 'fem'){%> <%='Feminino'%> <%}if(users[0].genero == 'outro'){%><%='Outro'%><%}%> </option>
                  <option value="mas">Masculino</option>
                  <option value="fem">Feminino</option>
                  <option value="outro">Outro</option>
                </select>
            </div>
            <div class="form-group">
                <label>Data de Nascimento</label>
                <input type="date" class="form-control" value="<%= users[0].dataNascimento %>" name="dataNascimento">
            </div>
            <div class="form-group">
                <label>Residência</label>
                <input type="text" class="form-control" placeholder="ex: Lobão/Sanguedo" value="<%= users[0].residencia %>" name="residencia">
            </div>
            <div class="form-group">
                <label>Morada</label>
                <input type="text" class="form-control" placeholder="ex: Rua do Testo  nº12345  0000-000" value="<%= users[0].morada %>" name="morada">
            </div>
            <div class="form-group">
                <label>Contacto</label>
                <input type="text" class="form-control" placeholder="ex: 123456789" value="<%= users[0].contacto %>" name="contacto">
            </div>
            <div class="form-group">
                <label>Contacto Pai</label>
                <input type="text" class="form-control" placeholder="ex: 123456789" value="<%= users[0].contactoPai %>" name="contactoPai">
            </div>
            <div class="form-group">
                <label>Contacto Mae</label>
                <input type="text" class="form-control" placeholder="ex: 123456789" value="<%= users[0].contactoMae %>" name="contactoMae">
            </div>
            <div class="form-group">
                <label>Contacto Casa</label>
                <input type="text" class="form-control" placeholder="ex: 213456789" value="<%= users[0].contactoCasa %>" name="contactoCasa">
            </div>
              <button type="submit" class="btn btn-success mr-2">Alterar</button>
        </form>
    </div>
</div>