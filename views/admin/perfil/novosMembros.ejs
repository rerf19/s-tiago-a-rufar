<div class="card">
    <div class="card-body">
      <h4 class="card-title">Pedidos de Novos Utilizadores</h4>
      <div class="table-responsive">
        <table class="table table-stiped">
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Opções</th>
          </tr>
          <% users.forEach(user => { %>
            <%if(user.privilegio == -1){%>
            <tr>
                <td><%= user.primeiroNome%> <%= user.ultimoNome%></td>
                <td><%= user.email%></td>
                <td>
                    <a href="/admin/perfil/aceitar/<%=user.idUtilizadores%>"><button type="button" class="btn btn-success">Aceitar</button></a>
                    <a href="/admin/perfil/eliminar/<%=user.idUtilizadores%>"><button type="button" class="btn btn-danger">Regeitar</button></a>
                </td>
            </tr>
          <%}%>
        <% }) %>
        </table>
      </div>
    </div>
  </div>